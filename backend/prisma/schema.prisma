generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ticket {
  id            Int      @id @default(autoincrement())
  title         String
  description   String
  createdAt     DateTime @default(now())
  latestUpdate  DateTime?
  status        String
  userId        Int
  createdBy     User     @relation("TicketCreator", fields: [userId], references: [id])
}

model User {
  id            Int      @id @default(autoincrement())
  username      String   @unique
  password      String
  createdAt     DateTime @default(now())
  refreshtoken String?
  role          String
  createdTickets Ticket[] @relation("TicketCreator")
}
